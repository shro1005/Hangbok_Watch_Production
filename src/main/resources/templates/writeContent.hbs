<script src="/js/summernote-0.8.16-dist/summernote.min.js"></script>
<script src="/js/summernote-0.8.16-dist/lang/summernote-ko-KR.js"></script>

<script src="/js/app/hangbok-writeContent.js" charset="UTF-8"></script>
{{/inline}}

