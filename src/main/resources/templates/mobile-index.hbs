    {{#*inline "scripts-blick"}}
        <script id="favorite_list" type="text/x-handlebars-template" charset="UTF-8">
            \{{#favorites}}
            <div class="mb-col-4 fav-card mb-border cl\{{playerId}}">
                <div class="mb-profile-buttons">
                    <button class="btn action-btn btn-like mb-btn-outline-danger btn-rounded clicked" onclick="delFavorite(\{{playerId}}, '\{{playerName}}')">
                        <img class="mb-heart-img-s" src="/HWimages/util/like.png">
                    </button>
                </div>
                <div class="mb-portrait-image" href="javascript:void(0);" onclick="playerDetail(this); return false;" attr-p="\{{isPublic}}" attr-u="\{{forUrl}}" style="cursor: pointer">
                    <img class="mb-fav-portrait-round-img" src="\{{portrait}}" onerror="this.src = '/HWimages/portrait/default.png';" alt="">
                    <div class="mb-player-level">Lv. \{{playerLevel}}</div>
                </div>
                <div class="mb-fav-contents" href="javascript:void(0);" onclick="playerDetail(this); return false;" attr-p="\{{isPublic}}" attr-u="\{{forUrl}}" style="cursor: pointer">
                    <div class="mb-player-name">\{{playerName}}<div class="mb-player-tagNum">\{{tagNum}}</div></div>
                    <div class="mb-competitive-boxs">
                        <div class="mb-cp-box tank-container">
                            <div class="mb-rank-role-s"><img class= "mb-role-img-s" src="/HWimages/role/icon-tank-8a52daaf01.png"></div>
                            \{{tankRatingPoint}}
                        </div>
                        <div class="mb-cp-box deal-container">
                            <div class="mb-rank-role-s"><img class= "mb-role-img-s" src="/HWimages/role/icon-offense-6267addd52.png"></div>
                            \{{dealRatingPoint}}</div>
                        <div class="mb-cp-box-end heal-container">
                            <div class="mb-rank-role-s"><img class= "mb-role-img-s" src="/HWimages/role/icon-support-46311a4210.png"></div>
                            \{{healRatingPoint}}
                        </div>
                    </div>
                </div>
            </div>
            \{{/favorites}}
        </script>

