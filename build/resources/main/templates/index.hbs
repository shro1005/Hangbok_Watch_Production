        <script id="player_list" type="text/x-handlebars-template" charset="UTF-8">
            <p class="grid-header"></p>
            <div class="row" id="search-result">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>플레이어</th>
                            <th>플랫폼</th>
                            <th>돌격</th>
                            <th>공격</th>
                            <th>지원</th>
