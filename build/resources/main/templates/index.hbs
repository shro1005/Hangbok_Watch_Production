                        </tr>
                        </thead>
                        <tbody class="tbody">
                        \{{#players}}
                        <tr>
                            <td class="align-items-leftß" href="javascript:void(0);" onclick="playerDetail(this); return false;" attr-p="\{{isPublic}}" attr-u="\{{forUrl}}" style="cursor: pointer; text-align: left;ß">
                                <img class="profile-img mr-2" src="\{{portrait}}" onerror="this.src = '/HWimages/portrait/default.png';" alt="">
